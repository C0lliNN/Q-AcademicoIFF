        <padding>
            <Insets top="20"/>
        </padding>

        <top>
            <GridPane vgap="30" style="-fx-background-color: white">

                <GridPane GridPane.rowIndex="0" fx:id="gridPaneTop">
                    <HBox alignment="CENTER" GridPane.hgrow="ALWAYS" fx:id="hboxNome" GridPane.rowIndex="0"
